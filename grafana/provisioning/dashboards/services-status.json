{
  "title": "Services Status",
  "uid": "services-status",
  "schemaVersion": 39,
  "version": 1,
  "refresh": "30s",
  "timezone": "browser",
  "graphTooltip": 1,
  "time": {
    "from": "now-6h",
    "to": "now"
  },
  "templating": {
    "list": [
      {
        "name": "job",
        "label": "Job",
        "type": "query",
        "datasource": {
          "type": "prometheus",
          "uid": "victoriametrics"
        },
        "query": "label_values(up, job)",
        "refresh": 2,
        "multi": true,
        "includeAll": true,
        "allValue": ".*",
        "current": {}
      }
    ]
  },
  "panels": [
    {
      "id": 1,
      "title": "Services Up/Down",
      "type": "stat",
      "gridPos": {
        "x": 0,
        "y": 0,
        "w": 24,
        "h": 5
      },
      "datasource": {
        "type": "prometheus",
        "uid": "victoriametrics"
      },
      "options": {
        "reduceOptions": {
          "calcs": [
            "lastNotNull"
          ]
        },
        "orientation": "horizontal",
        "colorMode": "background",
        "graphMode": "none",
        "justifyMode": "center",
        "textMode": "value_and_name"
      },
      "fieldConfig": {
        "defaults": {
          "mappings": [
            {
              "type": "value",
              "options": {
                "0": {
                  "text": "DOWN",
                  "color": "red"
                },
                "1": {
                  "text": "UP",
                  "color": "green"
                }
              }
            }
          ],
          "thresholds": {
            "mode": "absolute",
            "steps": [
              {
                "color": "red",
                "value": null
              },
              {
                "color": "green",
                "value": 1
              }
            ]
          }
        }
      },
      "targets": [
        {
          "expr": "up{job=~\"$job\"}",
          "legendFormat": "{{job}} / {{instance}}",
          "instant": true
        }
      ]
    },
    {
      "id": 2,
      "title": "Uptime Status Over Time",
      "type": "timeseries",
      "gridPos": {
        "x": 0,
        "y": 5,
        "w": 24,
        "h": 8
      },
      "datasource": {
        "type": "prometheus",
        "uid": "victoriametrics"
      },
      "options": {
        "tooltip": {
          "mode": "multi"
        }
      },
      "fieldConfig": {
        "defaults": {
          "min": 0,
          "max": 1,
          "mappings": [
            {
              "type": "value",
              "options": {
                "0": {
                  "text": "DOWN"
                },
                "1": {
                  "text": "UP"
                }
              }
            }
          ],
          "custom": {
            "fillOpacity": 20,
            "lineWidth": 2
          },
          "thresholds": {
            "mode": "absolute",
            "steps": [
              {
                "color": "red",
                "value": null
              },
              {
                "color": "green",
                "value": 1
              }
            ]
          },
          "color": {
            "mode": "thresholds"
          }
        }
      },
      "targets": [
        {
          "expr": "up{job=~\"$job\"}",
          "legendFormat": "{{job}} / {{instance}}"
        }
      ]
    },
    {
      "id": 3,
      "title": "Availability % (time window)",
      "type": "bargauge",
      "gridPos": {
        "x": 0,
        "y": 13,
        "w": 24,
        "h": 7
      },
      "datasource": {
        "type": "prometheus",
        "uid": "victoriametrics"
      },
      "options": {
        "orientation": "horizontal",
        "reduceOptions": {
          "calcs": [
            "mean"
          ]
        },
        "displayMode": "gradient",
        "showUnfilled": true
      },
      "fieldConfig": {
        "defaults": {
          "unit": "percentunit",
          "min": 0,
          "max": 1,
          "thresholds": {
            "mode": "absolute",
            "steps": [
              {
                "color": "red",
                "value": null
              },
              {
                "color": "yellow",
                "value": 0.95
              },
              {
                "color": "green",
                "value": 0.99
              }
            ]
          }
        }
      },
      "targets": [
        {
          "expr": "avg_over_time(up{job=~\"$job\"}[$__range])",
          "legendFormat": "{{job}} / {{instance}}"
        }
      ]
    },
    {
      "id": 4,
      "title": "Target Details",
      "type": "table",
      "gridPos": {
        "x": 0,
        "y": 20,
        "w": 24,
        "h": 7
      },
      "datasource": {
        "type": "prometheus",
        "uid": "victoriametrics"
      },
      "options": {
        "sortBy": [
          {
            "displayName": "Status",
            "desc": false
          }
        ]
      },
      "fieldConfig": {
        "defaults": {
          "mappings": [
            {
              "type": "value",
              "options": {
                "0": {
                  "text": "DOWN",
                  "color": "red"
                },
                "1": {
                  "text": "UP",
                  "color": "green"
                }
              }
            }
          ]
        },
        "overrides": [
          {
            "matcher": {
              "id": "byName",
              "options": "Value"
            },
            "properties": [
              {
                "id": "displayName",
                "value": "Status"
              },
              {
                "id": "custom.displayMode",
                "value": "color-background"
              }
            ]
          }
        ]
      },
      "targets": [
        {
          "expr": "up{job=~\"$job\"}",
          "legendFormat": "",
          "instant": true,
          "format": "table"
        }
      ],
      "transformations": [
        {
          "id": "organize",
          "options": {
            "excludeByName": {
              "Time": true,
              "__name__": true
            },
            "renameByName": {
              "instance": "Instance",
              "job": "Job"
            }
          }
        }
      ]
    }
  ]
}